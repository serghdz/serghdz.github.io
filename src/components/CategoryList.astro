---
import type { Category } from '../data/categories';

interface Props {
  categories: Category[];
}

const { categories } = Astro.props;
---

<div class="bg-white p-6 rounded-lg shadow-md">
  <h2 class="text-xl font-bold text-slate-900 mb-4">Categories</h2>
  <ul class="space-y-2">
    {
      categories.map((category) => (
        <li class="flex justify-between items-center">
          <a
            href={`/posts/category/${category.name.toLowerCase()}`}
            class="text-slate-600 hover:text-blue-600"
          >
            {category.name}
          </a>
          <span class="bg-slate-100 text-slate-600 text-sm px-2 py-1 rounded-full">
            {category.count}
          </span>
        </li>
      ))
    }
  </ul>
</div>