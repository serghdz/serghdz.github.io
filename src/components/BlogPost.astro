---
import { formatDate } from '../utils/date';
import type { Post } from '../types/post';

type Props = Post;

const { title, description, date, category, href } = Astro.props;
const formattedDate = formatDate(date);
---

<article class="bg-white p-6 rounded-lg shadow-md hover:shadow-lg transition-shadow">
  <a href={href}>
    <div class="flex justify-between items-start mb-4">
      <h2 class="text-2xl font-bold text-slate-900 hover:text-blue-600">{title}</h2>
      <span class="bg-blue-100 text-blue-800 text-sm font-medium px-2.5 py-0.5 rounded">
        {category}
      </span>
    </div>
    <p class="text-slate-600 mb-4">{description}</p>
    <div class="text-sm text-slate-500">
      {formattedDate}
    </div>
  </a>
</article>